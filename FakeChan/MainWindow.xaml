<Window x:Class="FakeChan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FakeChan"
        mc:Ignorable="d"
        Title="偽装ちゃん" Height="275" Width="650" Loaded="Window_Loaded" MinWidth="550" MinHeight="275">

    <TabControl>
        <TabItem x:Name="top" Header="話者">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="話者" Grid.Column="0" Grid.Row="0" HorizontalContentAlignment="Right"/>
                <ComboBox x:Name="ComboBoxAvator" Margin="2,1,1,1" Grid.ColumnSpan="3" SelectedValuePath="Key" DisplayMemberPath="Value" Grid.Column="1" Grid.Row="0" 
                                                               IsReadOnly="True"
                                                               SnapsToDevicePixels="True"
                                                               SelectionChanged="ComboBoxAvator_SelectionChanged"
                                                               HorizontalAlignment="Stretch"
                                                               HorizontalContentAlignment="Stretch"/>

                <Label Content="待ち受けポート" Grid.Column="0" Grid.Row="1" HorizontalContentAlignment="Right"/>
                <TextBox x:Name="TextBoxListenPort"  Margin="2,1,1,1" Grid.Column="1" Grid.Row="1"  MaxLength="5"
                                                                                            InputMethod.IsInputMethodEnabled="False"
                                                                                            LostFocus="TextBoxListenPort_LostFocus"
                                                                                            HorizontalAlignment="Left"
                                                                                            VerticalContentAlignment="Center" />
                <Button x:Name="ButtonStart" Content="待ち受け開始" Grid.Column="2" Grid.Row="1" Margin="2,1,1,1" IsEnabled="True" Click="ButtonStart_Click"/>
                <Button x:Name="ButtonStop"  Content="待ち受け終了" Grid.Column="3" Grid.Row="1" Margin="2,1,1,1" IsEnabled="False" Click="ButtonStop_Click"/>

                <StackPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="4">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" CanContentScroll="True">
                        <StackPanel Margin="1,1,1,1">
                            <WrapPanel x:Name="WrapPanelParams1" Margin="1,1,1,1" ></WrapPanel>
                            <WrapPanel x:Name="WrapPanelParams2" Margin="1,1,1,1" ></WrapPanel>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>

            </Grid>
        </TabItem>

        <TabItem x:Name="second" Header="設定">
            <Label Content="誰かが何か気の利いた事を追加してくれるに違いない"/>
        </TabItem>
    </TabControl>
</Window>
