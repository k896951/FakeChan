                                                               IsReadOnly="True"
                                                               SelectionChanged="ComboBoxEditInterface_SelectionChanged"/>

                        <Label Content="ボイス" Grid.Column="2" Grid.Row="1" Margin="2,1,2,1" VerticalAlignment="Center"/>
