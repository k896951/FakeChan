<Window x:Class="FakeChan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FakeChan"
        mc:Ignorable="d"
        Title="偽装ちゃん" Height="341" Width="650" Loaded="Window_Loaded" MinWidth="550" MinHeight="275" Closing="Window_Closing">

    <TabControl>
        
        <TabItem x:Name="Settings" Header="設定">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="TCP/IP待ち受けポート" Grid.Column="0" Grid.Row="0" HorizontalContentAlignment="Right"/>
                <TextBox x:Name="TextBoxListenPort"  Margin="2,1,1,1" Grid.Column="1" Grid.Row="0"  MaxLength="5"
                                                                                            InputMethod.IsInputMethodEnabled="False"
                                                                                            LostFocus="TextBoxListenPort_LostFocus"
                                                                                            HorizontalAlignment="Left"
                                                                                            VerticalContentAlignment="Center" />
                <Button x:Name="ButtonStart" Content="TCP/IP待ち受け開始" Grid.Column="2" Grid.Row="0" Margin="2,1,1,1" IsEnabled="True" Click="ButtonStart_Click"/>
                <Button x:Name="ButtonStop"  Content="TCP/IP待ち受け終了" Grid.Column="3" Grid.Row="0" Margin="2,1,1,1" IsEnabled="False" Click="ButtonStop_Click"/>

                <Label Content="話者" Grid.Column="0" Grid.Row="1" HorizontalContentAlignment="Right"/>
                <TextBlock x:Name="TextBlockAvatorText" Text="" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3"/>

                <Label Content="再生テキスト" Grid.Column="0" Grid.Row="2" HorizontalContentAlignment="Right"/>
                <TextBlock x:Name="TextBlockReceveText" Text="" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3"/>

                <Label Content="音声パラメタ設定" Grid.Column="0" Grid.Row="3" HorizontalContentAlignment="Right"/>
                <ComboBox x:Name="ComboBoxBouyomiVoice" SelectedValuePath="Key" DisplayMemberPath="Value" Grid.Column="1" Grid.Row="3" Margin="2,1,1,1"
                                                               IsReadOnly="True"
                                                               SnapsToDevicePixels="True"
                                                               SelectionChanged="ComboBoxBouyomiVoice_SelectionChanged"/>
                <Label x:Name="LabelSelectedAvator" Content="XXX" Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="2" Margin="2,1,1,1" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="4">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" CanContentScroll="True">
                        <StackPanel Margin="1,1,1,1">
                            <WrapPanel x:Name="WrapPanelParams1" Margin="1,1,1,1" ></WrapPanel>
                            <WrapPanel x:Name="WrapPanelParams2" Margin="1,1,1,1" ></WrapPanel>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>

            </Grid>
        </TabItem>

        <TabItem x:Name="avatorMap" Header="話者マップ">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="ボイス0" Grid.Column="0" Grid.Row="0" HorizontalContentAlignment="Right" Margin="2,5,2,5"/>
                <ComboBox x:Name="ComboBoxMapAvator0"  Grid.Column="1" Grid.Row="0"  Margin="2,5,2,5" SelectedValuePath="Key" DisplayMemberPath="Value"
                                                                                                     IsReadOnly="True"
                                                                                                     SnapsToDevicePixels="True"
                                                                                                     SelectionChanged="ComboBoxMapAvator_SelectionChanged"
                                                                                                     HorizontalAlignment="Stretch"
                                                                                                     HorizontalContentAlignment="Stretch"/>
                <Label Content="女性1" Grid.Column="0" Grid.Row="1" HorizontalContentAlignment="Right"/>
                <ComboBox x:Name="ComboBoxMapAvator1"  Grid.Column="1" Grid.Row="1" Margin="2,1,1,1" SelectedValuePath="Key" DisplayMemberPath="Value"
                                                                                                     IsReadOnly="True"
                                                                                                     SnapsToDevicePixels="True"
                                                                                                     SelectionChanged="ComboBoxMapAvator_SelectionChanged"
                                                                                                     HorizontalAlignment="Stretch"
                                                                                                     HorizontalContentAlignment="Stretch"/>
                <Label Content="女性2" Grid.Column="0" Grid.Row="2" HorizontalContentAlignment="Right"/>
                <ComboBox x:Name="ComboBoxMapAvator2"  Grid.Column="1" Grid.Row="2" Margin="2,1,1,1" SelectedValuePath="Key" DisplayMemberPath="Value"
                                                                                                     IsReadOnly="True"
                                                                                                     SnapsToDevicePixels="True"
                                                                                                     SelectionChanged="ComboBoxMapAvator_SelectionChanged"
                                                                                                     HorizontalAlignment="Stretch"
                                                                                                     HorizontalContentAlignment="Stretch"/>
                <Label Content="男性1" Grid.Column="0" Grid.Row="3" HorizontalContentAlignment="Right"/>
                <ComboBox x:Name="ComboBoxMapAvator3"  Grid.Column="1" Grid.Row="3" Margin="2,1,1,1" SelectedValuePath="Key" DisplayMemberPath="Value"
                                                                                                     IsReadOnly="True"
                                                                                                     SnapsToDevicePixels="True"
                                                                                                     SelectionChanged="ComboBoxMapAvator_SelectionChanged"
                                                                                                     HorizontalAlignment="Stretch"
                                                                                                     HorizontalContentAlignment="Stretch"/>
                <Label Content="男性2" Grid.Column="0" Grid.Row="4" HorizontalContentAlignment="Right"/>
                <ComboBox x:Name="ComboBoxMapAvator4"  Grid.Column="1" Grid.Row="4" Margin="2,1,1,1" SelectedValuePath="Key" DisplayMemberPath="Value"
                                                                                                     IsReadOnly="True"
                                                                                                     SnapsToDevicePixels="True"
                                                                                                     SelectionChanged="ComboBoxMapAvator_SelectionChanged"
                                                                                                     HorizontalAlignment="Stretch"
                                                                                                     HorizontalContentAlignment="Stretch"/>
                <Label Content="中性" Grid.Column="0" Grid.Row="5" HorizontalContentAlignment="Right"/>
                <ComboBox x:Name="ComboBoxMapAvator5"  Grid.Column="1" Grid.Row="5" Margin="2,1,1,1" SelectedValuePath="Key" DisplayMemberPath="Value"
                                                                                                     IsReadOnly="True"
                                                                                                     SnapsToDevicePixels="True"
                                                                                                     SelectionChanged="ComboBoxMapAvator_SelectionChanged"
                                                                                                     HorizontalAlignment="Stretch"
                                                                                                     HorizontalContentAlignment="Stretch"/>
                <Label Content="ロボット" Grid.Column="0" Grid.Row="6" HorizontalContentAlignment="Right"/>
                <ComboBox x:Name="ComboBoxMapAvator6"  Grid.Column="1" Grid.Row="6" Margin="2,1,1,1" SelectedValuePath="Key" DisplayMemberPath="Value"
                                                                                                     IsReadOnly="True"
                                                                                                     SnapsToDevicePixels="True"
                                                                                                     SelectionChanged="ComboBoxMapAvator_SelectionChanged"
                                                                                                     HorizontalAlignment="Stretch"
                                                                                                     HorizontalContentAlignment="Stretch"/>
                <Label Content="機械1" Grid.Column="0" Grid.Row="7" HorizontalContentAlignment="Right"/>
                <ComboBox x:Name="ComboBoxMapAvator7"  Grid.Column="1" Grid.Row="7" Margin="2,1,1,1" SelectedValuePath="Key" DisplayMemberPath="Value"
                                                                                                     IsReadOnly="True"
                                                                                                     SnapsToDevicePixels="True"
                                                                                                     SelectionChanged="ComboBoxMapAvator_SelectionChanged"
                                                                                                     HorizontalAlignment="Stretch"
                                                                                                     HorizontalContentAlignment="Stretch"/>
                <Label Content="機械2" Grid.Column="0" Grid.Row="8" HorizontalContentAlignment="Right"/>
                <ComboBox x:Name="ComboBoxMapAvator8"  Grid.Column="1" Grid.Row="8" Margin="2,1,1,1" SelectedValuePath="Key" DisplayMemberPath="Value"
                                                                                                     IsReadOnly="True"
                                                                                                     SnapsToDevicePixels="True"
                                                                                                     SelectionChanged="ComboBoxMapAvator_SelectionChanged"
                                                                                                     HorizontalAlignment="Stretch"
                                                                                                     HorizontalContentAlignment="Stretch"/>
            </Grid>
        </TabItem>
        
        <TabItem x:Name="Settings2" Header="設定２">
            <Label Content="誰かが何か気の利いた事を追加してくれるに違いない"/>
        </TabItem>
    </TabControl>
</Window>
