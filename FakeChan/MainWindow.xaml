                                                                                                     IsReadOnly="True"
                                                                                                     SnapsToDevicePixels="True"
                                                                                                     SelectionChanged="ComboBoxMapVoice0_SelectionChanged"
                                                                                                     HorizontalAlignment="Stretch"
                                                                                                     HorizontalContentAlignment="Stretch"/>

                        <Label Content="女性2" Grid.Column="2" Grid.Row="2" HorizontalContentAlignment="Right"/>
                        <ComboBox x:Name="ComboBoxMapVoice2"  Grid.Column="3" Grid.Row="2" Margin="2,1,2,1"
                                                                                                     SelectedValuePath="Key"  DisplayMemberPath="Value"
                                                                                                     IsReadOnly="True"
                                                                                                     SnapsToDevicePixels="True"
                                                                                                     SelectionChanged="ComboBoxMapVoice0_SelectionChanged"
                                                                                                     HorizontalAlignment="Stretch"
                                                                                                     HorizontalContentAlignment="Stretch"/>

                        <Label Content="男性1" Grid.Column="0" Grid.Row="3" HorizontalContentAlignment="Right"/>
                        <ComboBox x:Name="ComboBoxMapVoice3"  Grid.Column="1" Grid.Row="3" Margin="2,1,2,1"
                                                                                                     SelectedValuePath="Key"  DisplayMemberPath="Value"
                                                                                                     IsReadOnly="True"
                                                                                                     SnapsToDevicePixels="True"
                                                                                                     SelectionChanged="ComboBoxMapVoice0_SelectionChanged"
                                                                                                     HorizontalAlignment="Stretch"
                                                                                                     HorizontalContentAlignment="Stretch"/>

                        <Label Content="男性2" Grid.Column="2" Grid.Row="3" HorizontalContentAlignment="Right"/>
                        <ComboBox x:Name="ComboBoxMapVoice4"  Grid.Column="3" Grid.Row="3" Margin="2,1,2,1"
                                                                                                     SelectedValuePath="Key"  DisplayMemberPath="Value"
                                                                                                     IsReadOnly="True"
                                                                                                     SnapsToDevicePixels="True"
                                                                                                     SelectionChanged="ComboBoxMapVoice0_SelectionChanged"
                                                                                                     HorizontalAlignment="Stretch"
                                                                                                     HorizontalContentAlignment="Stretch"/>

                        <Label Content="中性" Grid.Column="0" Grid.Row="4" HorizontalContentAlignment="Right"/>
