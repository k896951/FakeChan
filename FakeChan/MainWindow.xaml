                                                                                                     SelectedValuePath="Key"  DisplayMemberPath="Value"
                                                                                                     IsReadOnly="True"
                                                                                                     SnapsToDevicePixels="True"
                                                                                                     SelectionChanged="ComboBoxMapVoice0_SelectionChanged"
                                                                                                     HorizontalAlignment="Stretch"
                                                                                                     HorizontalContentAlignment="Stretch"/>

                        <Label Content="機械1" Grid.Column="0" Grid.Row="5" HorizontalContentAlignment="Right"/>
                        <ComboBox x:Name="ComboBoxMapVoice7"  Grid.Column="1" Grid.Row="5" Margin="2,1,2,1"
                                                                                                     SelectedValuePath="Key"  DisplayMemberPath="Value"
                                                                                                     IsReadOnly="True"
                                                                                                     SnapsToDevicePixels="True"
                                                                                                     SelectionChanged="ComboBoxMapVoice0_SelectionChanged"
                                                                                                     HorizontalAlignment="Stretch"
                                                                                                     HorizontalContentAlignment="Stretch"/>

                        <Label Content="機械2" Grid.Column="2" Grid.Row="5" HorizontalContentAlignment="Right"/>
                        <ComboBox x:Name="ComboBoxMapVoice8"  Grid.Column="3" Grid.Row="5" Margin="2,1,2,1"
                                                                                                     SelectedValuePath="Key"  DisplayMemberPath="Value"
                                                                                                     IsReadOnly="True"
                                                                                                     SnapsToDevicePixels="True"
                                                                                                     SelectionChanged="ComboBoxMapVoice0_SelectionChanged"
                                                                                                     HorizontalAlignment="Stretch"
