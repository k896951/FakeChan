<Window x:Class="FakeChan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FakeChan"
        mc:Ignorable="d"
        Title="偽装ちゃん" Height="365" Width="650" Loaded="Window_Loaded" MinWidth="650" MinHeight="365" Closing="Window_Closing">

    <TabControl>
        
        <TabItem x:Name="Settings" Header="設定">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="話者" Grid.Column="0" Grid.Row="1" HorizontalContentAlignment="Right"/>
                <TextBlock x:Name="TextBlockAvatorText" Text="" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="4"/>

                <Label Content="再生テキスト" Grid.Column="0" Grid.Row="2" HorizontalContentAlignment="Right"/>
                <TextBox x:Name="TextBoxReceveText" Text="" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3"/>
                <Button x:Name="ButtonTestTalk"  Content="テスト再生" Grid.Column="4" Grid.Row="2" Margin="2,1,1,1" IsEnabled="True" Click="ButtonTestTalk_Click"/>

                <WrapPanel Grid.Column="1" Grid.Row="3">
                    <Ellipse x:Name="EllipseIpc" Fill="Black" Width="20" Height="20"/>
                    <Label Content="IPC" />
                </WrapPanel>
                <WrapPanel Grid.Column="2" Grid.Row="3">
                    <Ellipse x:Name="EllipseSocket" Fill="Black" Width="20" Height="20"/>
                    <Label Content="Socket" />
                </WrapPanel>
                <WrapPanel Grid.Column="3" Grid.Row="3">
                    <Ellipse x:Name="EllipseHTTP" Fill="Black" Width="20" Height="20"/>
                    <Label Content="HTTP" />
                </WrapPanel>

                <GroupBox Header="音声パラメタ設定" Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="5">
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ComboBox x:Name="ComboBoxBouyomiVoice" Grid.Column="0" Grid.Row="0" Margin="2,1,1,1"
                                                               SelectedValuePath="Key"
                                                               DisplayMemberPath="Value"
                                                               IsReadOnly="True"
                                                               SelectionChanged="ComboBoxBouyomiVoice_SelectionChanged"/>
                        <Label x:Name="LabelSelectedAvator" Content="XXX" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="3" Margin="2,1,1,1" VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" CanContentScroll="True">
                                <StackPanel Margin="1,1,1,1">
                                    <WrapPanel x:Name="WrapPanelParams1" Margin="1,1,1,1" ></WrapPanel>
                                    <WrapPanel x:Name="WrapPanelParams2" Margin="1,1,1,1" ></WrapPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                

            </Grid>
        </TabItem>

